include ../base/mixins
include ../base/header
include ../base/footer

block data
block variables

block variables
  - var title = "Veles - главная"
  - var wrapperMod = ""
  - var hasHeader = false
  - var headerMod = ""
  - var hasFooter = false
  - var footerMod = ""
  - var currentPage = ""

doctype html
html(lang="ru")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="Мёд - оптом и в розницу")

    link(rel="apple-touch-icon" sizes="180x180" href="favicon/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="favicon/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="favicon/favicon-16x16.png")   
    link(rel="mask-icon" href="favicon/safari-pinned-tab.svg" color="#ffcf55")
    meta(name="msapplication-TileColor" content="#ffcf55")
    meta(name="theme-color" content="#ffffff")

    link(rel="stylesheet", href="css/style.min.css")

  body
    +sprite()  
    header.header.container      
      h1.header__title Новости культуры
      ul.main-navigation
        li.main-navigation__item
          a.main-navigation__link(href="#") НОВОСТИ      
        li.main-navigation__item
          a.main-navigation__link(href="#") ОБЗОРЫ      
        li.main-navigation__item
          a.main-navigation__link(href="#") МУЗЫКА      
        li.main-navigation__item
          a.main-navigation__link(href="#") АРХИТЕКТУРА     
        li.main-navigation__item
          a.main-navigation__link(href="#") КИНО      
        li.main-navigation__item
          a.main-navigation__link(href="#") ТЕАТР     
        li.main-navigation__item
          a.main-navigation__link(href="#") ЛИТЕРАТУРА     
        li.main-navigation__item
          a.main-navigation__link(href="#") РЕЛИГИЯ      
        li.main-navigation__item
          a.main-navigation__link(href="#") ЖИВОПИСЬ  
    main
      section.intro
        .container
          span.intro__new новое         
          h2.intro__title Подводный отель
          p.intro__description Как известно, Дубай – город контрастов. Самые революционные и&nbsp;фантастические мечты архитекторов способен воплотить в&nbsp;жизнь этот мегаполис, построенный на нефти и за счет нефти      
      section.content.container 
        .content__main
          .content__section.content__section--news
            h2.content__title НОВОСТИ
            .content__news
              .content__news-main
                a.content__news-link(href="#")
                  img(src="img/birds.jpg" width="470" height="334" alt="изображение птиц")                  
                  h3.content__heading Новости культуры России и всего мира
                  p.content__description В минувшие выходные в Москве на фестивале «Оберег» вручили первую премию Russian World Music Awards
              ul.content__news-list
                li.content__news-item 
                  a.content__news-link(href="#")
                    img(src="img/leonov.jpg" width="127" height="91" alt="фотография памятника Евгению Леонову")
                    .content__news-info
                      h3.content__heading Открытие нового памятника Евгению&nbsp;Леонову
                      p.content__description 10 сентября в 15:00 был открыт памятник писателю
                li.content__news-item 
                  a.content__news-link(href="#")
                    img(src="img/boss.jpg" width="127" height="91" alt="фотография двух людей, мужчины и женщины - героев статьи")
                    .content__news-info
                      h3.content__heading Беседы с писателями
                      p.content__description Русские писатели говорят о важности искусства
                li.content__news-item 
                  a.content__news-link(href="#")
                    img(src="img/stpatrick.jpg" width="127" height="91" alt="изображение ирландского мужчины в шляпе с четырехлистным клевером - символа дня святого патрика")
                    .content__news-info
                      h3.content__heading День и ночь св. Патрика: встреча старых друзей
                      p.content__description Не Джойсом единым живет Ирландия! 
          .content__section.content__section--reviews
            h2.content__title ОБЗОРЫ
          .content__section.content__section--footer
            h2.content__title Ох, уж этот балет
        .content__aside
          .content__article 
             img(src="img/baloons.jpg" alt="Фотография воздушных шаров")
             h2.content__title ВОЗДУШНЫЕ ШАРЫ
             a.content__btn.btn.btn--light(href="#") Cмотреть
          .content__article 
             img(src="img/jeremy-bishop.jpg" alt="Фотография женщины под водой")
             h2.content__title.content__title--light НЕОБЫЧНАЯ ФОТОСЕССИЯ
             a.content__btn.btn.btn--dark(href="#") Cмотреть
          .content__article 
             img(src="img/bogdan-pasca.jpg" alt="Фотография цапли")
             h2.content__title.content__title--light Выставка птиц
             a.content__btn.btn.btn--dark(href="#") Cмотреть
        .content__slider
    header.footer
      .container      
        h1.footer__title Новости культуры
        ul.main-navigation
          li.main-navigation__item
            a.main-navigation__link(href="#") НОВОСТИ      
          li.main-navigation__item
            a.main-navigation__link(href="#") ОБЗОРЫ      
          li.main-navigation__item
            a.main-navigation__link(href="#") МУЗЫКА      
          li.main-navigation__item
            a.main-navigation__link(href="#") АРХИТЕКТУРА     
          li.main-navigation__item
            a.main-navigation__link(href="#") КИНО      
          li.main-navigation__item
            a.main-navigation__link(href="#") ТЕАТР     
          li.main-navigation__item
            a.main-navigation__link(href="#") ЛИТЕРАТУРА     
          li.main-navigation__item
            a.main-navigation__link(href="#") РЕЛИГИЯ      
          li.main-navigation__item
            a.main-navigation__link(href="#") ЖИВОПИСЬ  
    block modals

    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
      